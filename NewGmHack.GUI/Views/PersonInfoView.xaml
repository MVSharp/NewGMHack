<UserControl x:Class="NewGmHack.GUI.Views.PersonInfoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NewGmHack.GUI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
<StackPanel Margin="10">
        <TextBlock Text="Person ID:" FontWeight="Bold"/>
        <TextBlock Text="{Binding Info.PersonId}" Margin="0,0,0,10"/>
        <TextBlock Text="Gundam ID:" FontWeight="Bold"/>
        <TextBlock Text="{Binding Info.GundamId}" Margin="0,0,0,10"/>
        <TextBlock Text="Weapon 1:" FontWeight="Bold"/>
        <TextBlock Text="{Binding Info.Weapon1}" Margin="0,0,0,10"/>
        <TextBlock Text="Weapon 2:" FontWeight="Bold"/>
        <TextBlock Text="{Binding Info.Weapon2}" Margin="0,0,0,10"/>
        <TextBlock Text="Weapon 3:" FontWeight="Bold"/>
        <TextBlock Text="{Binding Info.Weapon3}" Margin="0,0,0,10"/>
    </StackPanel>
</UserControl>
