<UserControl x:Class="NewGmHack.GUI.Views.PersonInfoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:NewGmHack.GUI.Views"
             xmlns:vm="clr-namespace:NewGmHack.GUI.ViewModels"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch">
    <UserControl.DataContext>
        <vm:PersonInfoUserControlsViewModel />
    </UserControl.DataContext>

<Grid Margin="10">
    <WrapPanel Orientation="Vertical" ItemWidth="auto" MinHeight="50" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <StackPanel Margin="10">
            <TextBlock Text="Person ID:" FontWeight="Bold" Foreground="DeepSkyBlue"/>
            <TextBlock Text="{Binding PersonInfo.Slot, IsAsync=True}" Foreground="DeepSkyBlue" Margin="0,0,0,10"/>
        </StackPanel>
        <StackPanel Margin="10">
            <TextBlock Text="Gundam ID:" FontWeight="Bold"/>
            <TextBlock Text="{Binding PersonInfo.Slot, IsAsync=True}" Margin="0,0,0,10"/>
        </StackPanel>

        <StackPanel Margin="10">
            <TextBlock Text="Gundam ID:" FontWeight="Bold"/>
            <TextBlock Text="{Binding PersonInfo.GundamId, IsAsync=True}" Margin="0,0,0,10"/>
        </StackPanel>

        <StackPanel Margin="10">
            <TextBlock Text="Gundam Name:" FontWeight="Bold"/>
            <TextBlock Text="{Binding PersonInfo.GundamName, IsAsync=True}" Margin="0,0,0,10"/>
        </StackPanel>
        <StackPanel Margin="10">
            <TextBlock Text="Weapon 1:" FontWeight="Bold"/>
            <TextBlock Text="{Binding PersonInfo.Weapon1, IsAsync=True}" Margin="0,0,0,10"/>
        </StackPanel>

        <StackPanel Margin="10">
            <TextBlock Text="Weapon 2:" FontWeight="Bold"/>
            <TextBlock Text="{Binding PersonInfo.Weapon2, IsAsync=True}" Margin="0,0,0,10"/>
        </StackPanel>

        <StackPanel Margin="10">
            <TextBlock Text="Weapon 3:" FontWeight="Bold"/>
            <TextBlock Text="{Binding PersonInfo.Weapon3, IsAsync=True}" Margin="0,0,0,10"/>
        </StackPanel>

        <StackPanel Margin="10">
            <TextBlock Text="X" FontWeight="Bold"/>
            <TextBlock Text="{Binding PersonInfo.X, IsAsync=True}" Margin="0,0,0,10"/>
        </StackPanel>
        <StackPanel Margin="10">
            <TextBlock Text="Y" FontWeight="Bold"/>
            <TextBlock Text="{Binding PersonInfo.Y, IsAsync=True}" Margin="0,0,0,10"/>
        </StackPanel>

        <StackPanel Margin="10">
            <TextBlock Text="Z 3:" FontWeight="Bold"/>
            <TextBlock Text="{Binding PersonInfo.Z, IsAsync=True}" Margin="0,0,0,10"/>
        </StackPanel>
    </WrapPanel>
</Grid>
</UserControl>
